#!/bin/bash

set -e

if [ -n "${DEBUG}" ]; then
  set -x
fi

set -u

payload=$(cat)

url=$("$(dirname "$0")"/lib/variables.sh url <<<"$payload")
arguments=$("$(dirname "$0")"/lib/variables.sh arguments <<<"$payload")

"$(dirname "$0")"/lib/curl.sh "$url" "$arguments"

hash=$(sha256sum .curl/output | cut -d ' ' -f1)

jq -n "[{hash: \"$hash\"}]"
